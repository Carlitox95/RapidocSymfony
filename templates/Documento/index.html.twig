{% extends 'base.html.twig' %}
 
{% block head %} 
   {{ parent() }}    
  
  {% block javascripts %}
    <!-- Funciones Javascript -->
    {#<script src="{{ asset('js/DocumentoController.js') }}"></script>#}      
    <!-- Funciones Javascript -->
  {% endblock javascripts %}
{% endblock head %}
                
{% block contenido %}
<div class="separadorMain">  

  <!-- Mensaje de Seleccion del Documento -->
    <div class="offset-s1 col s10 offset-s1">
      <nav>
        <div class="nav-wrapper blue lighten-2 white-text">
          <div class="col s12">
           <a href="{{ path('documento') }}" class="breadcrumb">Documento</a>
           <a href="{{ path('documento') }}" class="breadcrumb">Seleccion del Documento</a>
          </div>
        </div>
      </nav>
     <br>
     <br>
    </div>
    <!-- Mensaje de Seleccion del Documento -->


  
  <!-- Seleccion de la Documentacion -->
  <div class="offset-s1 col s10 offset-s1">            
    {% for formulario in formularios %}
      <div class="col s12 m6">
        <div class="card blue lighten-2 white-text" id="formulario{{formulario.id}}">
          <div class="card-content white-text">
            <span class="card-title tituloTramite">
             <h6><strong>{{formulario.nombre}}</strong></h6>
            </span><p>{{formulario.descripcion}}</p>
          </div>
          <div class="card-action blue lighten-3 white-text">
           <i class="material-icons left">person</i><strong>Categoria: </strong>{{formulario.categoria}} 
           
            {% if formulario.categoria == "Calculo" %}
             <a href="{{ path('calculos') }}" class="secondary-content waves-effect waves-light btn btn-small light-blue darken-1">Calcular</a>
            {% else %}
             <a href="{{ path('seleccionarPersona',{'idFormulario': formulario.id}) }}" class="secondary-content waves-effect waves-light btn btn-small light-blue darken-1">Seleccionar</a>
            {% endif %}        

          </div>
        </div>
      </div>
    {% endfor %}       
  </div>
  <!-- Seleccion de la Documentacion -->
  
  
  <!-- Botones -->
  <div class="offset-s2 col s8 offset-s2">
   <br>

   <center>
      <a style="margin:5px;" href="{{ path('home') }}" class="waves-effect waves-light btn-large blue lighten-2 white-text">
       <i class="material-icons left">home</i>Volver al Home
      </a> 
    </center>  
  </div>
  <!-- Botones -->
    
</div>
{% endblock contenido %}            

