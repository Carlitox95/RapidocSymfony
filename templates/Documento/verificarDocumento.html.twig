{% extends 'base.html.twig' %}


{% block head %} 
   {{ parent() }}    
  
  {% block javascripts %}
    <!-- Funciones Javascript -->
    <script src="{{ asset('js/DocumentoController.js') }}"></script>      
    <!-- Funciones Javascript -->
  {% endblock javascripts %}
{% endblock head %}
                
{% block contenido %}
<div class="separadorMain">  

    <!-- Mensaje de Seleccion del Documento -->
    <div class="offset-s1 col s10 offset-s1">
      <nav>
        <div class="nav-wrapper blue lighten-2 white-text">
          <div class="col s12">
           <a href="{{ path('documento') }}" class="breadcrumb">Documentos</a>
           <a href="#!" class="breadcrumb">{{formulario.nombre}}</a>
           <a href="#!" class="breadcrumb">{{persona}},{{persona.cuitcuil}}</a>
           <a href="#!" class="breadcrumb">Completar Datos</a>
          </div>
        </div>
      </nav>
     <br>
    </div>
    <!-- Mensaje de Seleccion del Documento -->

    <!-- Aviso para crear mas documentos -->
    {% if documento is not null %}
      <div class="offset-s1 col s10 offset-s1">
        <blockquote class="textoBlockquote">
         <br>
         <p><strong><i class="material-icons left">info</i>Importante:</strong> Si desea crear otro periodo de este documento, solo debe actualizar datos y accionar el boton de generar</p>
         <br>
        </blockquote>
      </div>    
    {% endif %} 
    <!-- Aviso para crear mas documentos -->

    <!-- Caja Central -->
    <div class="offset-s1 col s10 offset-s1">
      <!-- Caja del Formulario -->
      <div class="col s6">     
        <ul class="collection with-header" id="coleccionDocumentacion">
         <li class="collection-header blue lighten-2 white-text"><h6>Completar Datos</h6></li>
          <li class="collection-item"> 
            {{ form_start(form, {'action': path('verificarDocumentoUpdate'), 'method': 'POST'}) }}         
             <input type="hidden" name="idPersona" value="{{persona.id}}">
             <input type="hidden" name="idFormulario" value="{{formulario.id}}">
             {#<input type="hidden" name="idDocumento" value="{{documento.id}}">#}
            {{ form_end(form) }}
          </li>
        </ul>    
      </div>
      <!-- Caja del Formulario -->

      <!-- Caja de los Valores -->
      <div class="col s6">
        <ul class="collection with-header" id="coleccionDocumentacion">
          <li class="collection-header blue lighten-2 white-text"><h6>Vista Previa</h6></li>
          <li class="collection-item" style="min-height:600px;">    
            {% if documento is null %}
             <p>Sin vista previa</p>
            {% else %}              
             <iframe width="100%"  height="600px" src="{{ asset(documento.getRuta()) }}" frameborder="0" border="0" cellspacing="0" style="border-style: none;"></iframe>
            {% endif %} 
          </li>
        </ul>  
      </div>
      <!-- Caja de los Valores -->
    </div>
    <!-- Caja Central -->
   
  <!-- Botones de Direccionamiento -->
  <div class="offset-s2 col s8 offset-s2">
    <center>      
      <a href="{{ path('documento') }}" style="margin:5px;" class="waves-effect waves-light btn-large blue lighten-2 white-text">
       <i class="material-icons left">archive</i>Volver a la Seleccion de Documentos
      </a> 
    </center>
  </div>
  <!-- Botones de Direccionamiento -->
    



  
 
    
</div>
{% endblock contenido %}            

