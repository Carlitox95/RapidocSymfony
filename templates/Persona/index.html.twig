{% extends 'base.html.twig' %}
 

                
{% block contenido %}
<div class="separadorMain">  


 {# a.addEventListener("click",function(){visualizarPersona(a,personas[idPersona],idPersona)},false); #}
    <!-- Caja de Registros Personales -->
    <div class="offset-s2 col s8 offset-s2">
       
        <!-- Listado de Personas Cargadas -->                
        <ul class="collection with-header" id="listadoPersonas">
             <li class="collection-header blue lighten-2 white-text"><h5>Personas Registradas</h5></li>
 
            {% for persona in personas %}
            	<li class="collection-item">
            		<div class="row">
            		 <i class="material-icons left">person</i> {{ persona.apellido}}, {{persona.nombre}}  
                    <div class="secondary-content">   
                      <a href="{{ path('borrarPersona',{'idPersona': persona.id}) }}" class="btn-small waves-effect waves-light blue lighten-2 white-text" id="{{persona.id}}">
                       <i class="material-icons">delete</i> 
                      </a>
                      <a href="{{ path('editarPersona',{'idPersona': persona.id}) }}" class="btn-small waves-effect waves-light blue lighten-2 white-text" id="{{persona.id}}">
                       <i class="material-icons">edit</i> 
                      </a>
                      <a href="{{ path('verPersona',{'idPersona': persona.id}) }}" class="btn-small waves-effect waves-light blue lighten-2 white-text" id="{{persona.id}}">
                       <i class="material-icons">pageview</i> 
                      </a>
                    </div>                 
            		</div>
            	</li>     
            {% endfor %}

        </ul> 
    </div>    
    <!-- Caja de Registros Personales -->

    
    <br>
    <!-- Botones de Direccionamiento -->
    <div class="offset-s2 col s8 offset-s2">
    <center>
        <a href="{{ path('nuevaPersona') }}" class="waves-effect waves-light btn-large blue lighten-2 white-text">
          <i class="material-icons left">add</i>Registrar Nueva Persona
        </a> 
        <a href="{{ path('home') }}" class="waves-effect waves-light btn-large blue lighten-2 white-text">
          <i class="material-icons left">home</i>Volver al Home
        </a> 
    </center>
    </div>
    <!-- Botones de Direccionamiento -->

    
</div>
{% endblock contenido %}            

